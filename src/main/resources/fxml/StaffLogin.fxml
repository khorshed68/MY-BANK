<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mybank.controllers.StaffLoginController"
      alignment="CENTER" spacing="9.6" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">
    
    <padding>
        <Insets top="16" right="32" bottom="16" left="32"/>
    </padding>
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="4">
        <Label text="ðŸ¦" style="-fx-font-size: 36px;"/>
        <Label text="My Bank" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Label text="Staff Portal" style="-fx-font-size: 16px; -fx-text-fill: #d0d0d0;">
            <font>
                <Font size="16"/>
            </font>
        </Label>
    </VBox>
    
    <!-- Login Form Card -->
    <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);"
          maxWidth="320" prefWidth="320">
        <padding>
            <Insets top="16" right="20" bottom="16" left="20"/>
        </padding>
        
        <Label text="Staff Login" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>
        
        <Label text="Enter your credentials to access the staff dashboard" 
               style="-fx-text-fill: #666; -fx-font-size: 12px;" wrapText="true"/>
        
        <!-- Username Field -->
        <VBox spacing="2.4">
            <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 12px;"/>
            <TextField fx:id="usernameField" promptText="Enter username"
                      style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Password Field -->
        <VBox spacing="2.4">
            <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" promptText="Enter password"
                          style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 14px;"/>
        </VBox>
        
        <!-- Error Label -->
        <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-font-weight: bold;" 
               wrapText="true" visible="false" managed="false"/>
        
        <!-- Buttons -->
        <HBox spacing="8" alignment="CENTER">
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                   style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 32; -fx-background-radius: 5; -fx-cursor: hand;"
                   defaultButton="true" prefWidth="120">
                <font>
                    <Font name="System Bold" size="13"/>
                </font>
            </Button>
            <Button text="Back" onAction="#handleBack"
                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 32; -fx-background-radius: 5; -fx-cursor: hand;"
                   prefWidth="120">
                <font>
                    <Font size="13"/>
                </font>
            </Button>
        </HBox>
        
        <!-- Registration Link -->
        <HBox spacing="6.4" alignment="CENTER">
            <Label text="New staff member?" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
            <Hyperlink text="Register Here" onAction="#handleRegister" style="-fx-text-fill: #1976d2;">
                <font>
                    <Font name="System Bold" size="12"/>
                </font>
            </Hyperlink>
        </HBox>
    </VBox>
    
    <!-- Role Information -->
    <VBox spacing="4" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 10; -fx-background-radius: 10;"
          maxWidth="320">
        <Label text="Staff Roles &amp; Permissions" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 12px;"/>
        <Label text="ðŸ‘¨â€ðŸ’¼ Admin: Full system access, manage staff &amp; reports" 
               style="-fx-text-fill: #d0d0d0; -fx-font-size: 11px;"/>
        <Label text="ðŸ‘” Manager: Account approvals &amp; customer management" 
               style="-fx-text-fill: #d0d0d0; -fx-font-size: 11px;"/>
        <Label text="ðŸ‘¨â€ðŸ’» Officer: Customer service &amp; account operations" 
               style="-fx-text-fill: #d0d0d0; -fx-font-size: 11px;"/>
        <Label text="ðŸ§‘â€ðŸ’¼ Teller: Basic transactions &amp; customer support" 
               style="-fx-text-fill: #d0d0d0; -fx-font-size: 11px;"/>
    </VBox>
</VBox>
