<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mybank.controllers.AdminLoginController"
            stylesheets="@../css/style.css"
            styleClass="root">
    
    <top>
        <VBox styleClass="header" alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-padding: 28 32 28 32; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
            <HBox alignment="CENTER" spacing="8">
                <Label text="ðŸ¦" style="-fx-font-size: 56px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 12, 0, 0, 4);"/>
                <Label text="ðŸ”" style="-fx-font-size: 48px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 3);"/>
            </HBox>
            <Label text="ADMIN LOGIN" styleClass="title" style="-fx-text-fill: #FFD700; -fx-font-size: 36px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 12, 0, 0, 4); -fx-letter-spacing: 2px;">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>
            <Label text="âœ¨ Secure Administrative Access âœ¨" styleClass="subtitle" style="-fx-text-fill: #00D9FF; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 6, 0, 0, 2); -fx-background-color: rgba(255,255,255,0.2); -fx-padding: 6 18 6 18; -fx-background-radius: 20;">
                <font>
                    <Font name="System Bold" size="15"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="24" maxWidth="420">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>
            
            <!-- Login Form -->
            <VBox spacing="20" styleClass="form-container" style="-fx-background-color: linear-gradient(to bottom, #ffffff 0%, #f8f9ff 100%); -fx-background-radius: 18px; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.35), 20, 0, 0, 8); -fx-border-color: linear-gradient(to right, #667eea, #764ba2); -fx-border-width: 2; -fx-border-radius: 18;">
                <padding>
                    <Insets top="35" bottom="35" left="35" right="35"/>
                </padding>
                
                <!-- Username -->
                <VBox spacing="10">
                    <Label text="ðŸ‘¤ Admin Username" styleClass="form-label" style="-fx-text-fill: #667eea; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" 
                              promptText="Enter your admin username" 
                              styleClass="form-textfield"
                              style="-fx-background-radius: 10px; -fx-border-color: #c5ceff; -fx-border-radius: 10px; -fx-border-width: 2; -fx-padding: 12; -fx-font-size: 14px; -fx-background-color: #fafbff; -fx-effect: innershadow(gaussian, rgba(102, 126, 234, 0.15), 8, 0, 0, 2);"
                              prefHeight="48"/>
                </VBox>
                
                <!-- Password -->
                <VBox spacing="10">
                    <Label text="ðŸ”’ Password" styleClass="form-label" style="-fx-text-fill: #667eea; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Enter your password" 
                                  styleClass="password-field"
                                  style="-fx-background-radius: 10px; -fx-border-color: #c5ceff; -fx-border-radius: 10px; -fx-border-width: 2; -fx-padding: 12; -fx-font-size: 14px; -fx-background-color: #fafbff; -fx-effect: innershadow(gaussian, rgba(102, 126, 234, 0.15), 8, 0, 0, 2);"
                                  prefHeight="48"/>
                </VBox>
                
                <!-- Message Label -->
                <Label fx:id="messageLabel" 
                       text="" 
                       wrapText="true"
                       visible="false"
                       managed="false"
                       styleClass="message-label">
                    <padding>
                        <Insets top="8" bottom="8"/>
                    </padding>
                </Label>
                
                <!-- Login Button -->
                <HBox spacing="16" alignment="CENTER">
                    <padding>
                        <Insets top="10" />
                    </padding>
                    <Button text="ðŸ” LOGIN" 
                           onAction="#handleLogin" 
                           styleClass="primary-button"
                           style="-fx-background-color: linear-gradient(135deg, #4CAF50 0%, #45a049 50%, #388E3C 100%); -fx-text-fill: #FFD700; -fx-background-radius: 30px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(76, 175, 80, 0.7), 20, 0, 0, 8); -fx-border-color: rgba(255,255,255,0.4); -fx-border-width: 2.5; -fx-border-radius: 30; -fx-font-size: 18px; -fx-padding: 14 32 14 32; -fx-text-shadow: 0px 2px 4px rgba(0,0,0,0.4);"
                           prefHeight="56"
                           prefWidth="360"
                           maxWidth="360">
                        <font>
                            <Font name="System Bold" size="18"/>
                        </font>
                    </Button>
                </HBox>
                
                <!-- Security Notice -->
                <VBox spacing="6" alignment="CENTER" style="-fx-background-color: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%); -fx-padding: 12; -fx-background-radius: 12; -fx-border-color: #ff6b6b; -fx-border-width: 2; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(255, 107, 107, 0.3), 10, 0, 0, 3);">
                    <padding>
                        <Insets top="8" bottom="8"/>
                    </padding>
                    <Label text="âš ï¸ Authorized Personnel Only" 
                           style="-fx-text-fill: #dc2626; -fx-font-weight: bold; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(220, 38, 38, 0.2), 4, 0, 0, 1);">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>
                    <Label text="All activities are logged and monitored" 
                           style="-fx-text-fill: #991b1b; -fx-font-size: 12px; -fx-font-weight: bold;">
                        <font>
                            <Font name="System Bold" size="12"/>
                        </font>
                    </Label>
                </VBox>
            </VBox>
            
            <!-- Back Button -->
            <Button text="â—€ Back to Main Login" 
                   onAction="#handleBack" 
                   styleClass="back-button"
                   style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-text-fill: #495057; -fx-background-radius: 25px; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #ced4da; -fx-border-radius: 25; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 3);"
                   prefHeight="48"
                   maxWidth="360">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
            
            <!-- Registration Link -->
            <HBox spacing="8" alignment="CENTER" style="-fx-background-color: rgba(102, 126, 234, 0.08); -fx-padding: 10 20 10 20; -fx-background-radius: 20;">
                <padding>
                    <Insets top="8" bottom="8"/>
                </padding>
                <Label text="New admin?" styleClass="info-text" style="-fx-text-fill: #4a5568; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Label>
                <Hyperlink text="Register Here" onAction="#handleRegister" styleClass="link" style="-fx-text-fill: #667eea; -fx-font-weight: bold; -fx-underline: true;">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Hyperlink>
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <padding>
                <Insets top="16" bottom="16" left="16" right="16"/>
            </padding>
            <Label text="Â© 2025 MyBank - Admin Portal" styleClass="footer-text">
                <font>
                    <Font size="8.8"/>
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
