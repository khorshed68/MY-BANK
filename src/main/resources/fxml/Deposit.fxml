                <font>
                    <Font name="System" size="14" />
                </font>
            </TextField>
        </VBox>
        
        <!-- Deposit Amount -->
        <VBox spacing="10">
            <Label text="ðŸ’µ Deposit Amount:" styleClass="form-label">
