                <font>
                    <Font name="System" size="14" />
                </font>
            </TextField>
        </VBox>
        
        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" styleClass="message-label" wrapText="true">
            <font>
                <Font name="System" size="10.4" />
            </font>
        </Label>
        
        <!-- Buttons -->
        <HBox spacing="16" alignment="CENTER">
