<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" styleClass="root-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mybank.controllers.PasswordSetupController">
    
    <padding>
        <Insets top="24" right="32" bottom="24" left="32" />
    </padding>
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="8">
        <Label text="Create Your Password" styleClass="dialog-title">
            <font>
                <Font name="System Bold" size="22.4" />
            </font>
        </Label>
        
        <Label text="Set up a secure password for your account" styleClass="dialog-subtitle">
            <font>
                <Font name="System" size="11.2" />
            </font>
        </Label>
        
        <Label text="âš  For security, you must change from the default password" 
               style="-fx-text-fill: #f57c00; -fx-font-size: 10px; -fx-font-weight: bold;">
        </Label>
    </VBox>
    
    <!-- Account Info -->
    <VBox spacing="6.4" alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-background-radius: 8; -fx-padding: 12;">
        <Label fx:id="accountInfoLabel" text="Account: " styleClass="info-label">
            <font>
                <Font name="System Bold" size="10.4" />
            </font>
        </Label>
    </VBox>
    
    <!-- Password Form Container -->
    <VBox spacing="14.4" styleClass="form-container" prefWidth="320">
        <padding>
            <Insets top="16" right="24" bottom="16" left="24" />
        </padding>
        
        <!-- New Password -->
        <VBox spacing="6.4">
            <Label text="New Password:" styleClass="form-label">
                <font>
                    <Font name="System Bold" size="10.4" />
                </font>
            </Label>
            <PasswordField fx:id="newPasswordField" promptText="Enter your password" styleClass="password-field" prefHeight="32">
                <font>
                    <Font name="System" size="11.2" />
                </font>
            </PasswordField>
            <Label text="Minimum 6 characters" style="-fx-text-fill: #666; -fx-font-size: 9px;" />
        </VBox>
        
        <!-- Confirm Password -->
        <VBox spacing="6.4">
            <Label text="Confirm Password:" styleClass="form-label">
                <font>
                    <Font name="System Bold" size="10.4" />
                </font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" styleClass="password-field" prefHeight="32">
                <font>
                    <Font name="System" size="11.2" />
                </font>
            </PasswordField>
        </VBox>
        
        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" styleClass="message-label" wrapText="true" minHeight="20">
            <font>
                <Font name="System" size="9.6" />
            </font>
        </Label>
        
        <!-- Buttons -->
        <HBox spacing="9.6" alignment="CENTER">
            <padding>
                <Insets top="8" />
            </padding>
            
            <Button text="Create Password" onAction="#handleCreatePassword" styleClass="login-button" prefWidth="144" prefHeight="36">
                <font>
                    <Font name="System Bold" size="11.2" />
                </font>
            </Button>
            
            <Button text="Skip for Now" onAction="#handleSkip" styleClass="clear-button" prefWidth="96" prefHeight="36">
                <font>
                    <Font name="System" size="10.4" />
                </font>
            </Button>
        </HBox>
    </VBox>
    
    <!-- Info Text -->
    <Label text="You can set up your password later from Account Settings" style="-fx-text-fill: #666; -fx-font-size: 9px;" />
    
</VBox>
