<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mybank.controllers.AdminRegistrationController"
      alignment="CENTER" spacing="8" style="-fx-background-color: linear-gradient(to bottom, #37474f, #546e7a);">
    
    <padding>
        <Insets top="12" right="32" bottom="12" left="32"/>
    </padding>
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="4">
        <Label text="ðŸ”" style="-fx-font-size: 26px;"/>
        <Label text="Admin Registration" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="17.6"/>
            </font>
        </Label>
        <Label text="Create your admin account" style="-fx-font-size: 10px; -fx-text-fill: #d0d0d0;"/>
    </VBox>
    
    <!-- Registration Form Card -->
    <VBox spacing="6.4" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);"
          maxWidth="400" prefWidth="400">
        <padding>
            <Insets top="14.4" right="20" bottom="14.4" left="20"/>
        </padding>
        
        <!-- Profile Picture Upload -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Profile Picture (Optional)" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 10px;"/>
            <HBox spacing="10" alignment="CENTER">
                <StackPane style="-fx-background-color: #f5f5f5; -fx-border-color: #667eea; -fx-border-width: 3; -fx-border-radius: 50; -fx-background-radius: 50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.3), 8, 0, 0, 2);"
                          prefWidth="100" prefHeight="100" maxWidth="100" maxHeight="100">
                    <ImageView fx:id="profileImageView" 
                              fitWidth="94" fitHeight="94" 
                              preserveRatio="false"
                              smooth="true">
                        <clip>
                            <javafx.scene.shape.Circle centerX="47" centerY="47" radius="47"/>
                        </clip>
                    </ImageView>
                    <Label fx:id="profileImageLabel" text="No Image" style="-fx-text-fill: #999; -fx-font-size: 10px;"/>
                </StackPane>
                <VBox spacing="6" alignment="CENTER_LEFT">
                    <Button text="ðŸ“· Upload Picture" onAction="#handleUploadPicture"
                           style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-padding: 6 18; -fx-background-radius: 12; -fx-cursor: hand; -fx-font-size: 10px; -fx-font-weight: bold;"
                           prefWidth="120"/>
                    <Label text="JPG, PNG (max 2MB)" style="-fx-text-fill: #888; -fx-font-size: 9px;"/>
                </VBox>
            </HBox>
        </VBox>
            
        <!-- Full Name -->
        <VBox spacing="2.4">
            <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <TextField fx:id="fullNameField" promptText="Enter your full name"
                      style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Username -->
        <VBox spacing="2.4">
            <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <TextField fx:id="usernameField" promptText="Choose a username (min 4 characters)"
                      style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Email -->
        <VBox spacing="2.4">
            <Label text="Email *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <TextField fx:id="emailField" promptText="admin@mybank.com"
                      style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Phone Number -->
        <VBox spacing="2.4">
            <Label text="Phone Number *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <TextField fx:id="phoneField" promptText="01XXXXXXXXX"
                      style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Password -->
        <VBox spacing="2.4">
            <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <PasswordField fx:id="passwordField" promptText="Create a strong password (min 6 characters)"
                          style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Confirm Password -->
        <VBox spacing="2.4">
            <Label text="Confirm Password *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 9px;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"
                          style="-fx-padding: 6; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 10px;" prefHeight="22.4"/>
        </VBox>
        
        <!-- Info Box -->
        <HBox spacing="6.4" alignment="CENTER_LEFT" 
              style="-fx-background-color: #e3f2fd; -fx-padding: 6; -fx-background-radius: 5; -fx-border-color: #2196f3; -fx-border-radius: 5;">
            <Label text="â„¹ï¸" style="-fx-font-size: 11px;"/>
            <Label text="Your admin account will be created with ACTIVE status." 
                   style="-fx-text-fill: #1565c0; -fx-font-size: 8px;" wrapText="true"/>
        </HBox>
        
        <!-- Error/Success Label -->
        <Label fx:id="messageLabel" style="-fx-font-weight: bold;" 
               wrapText="true" visible="false" managed="false"/>
        
        <!-- Buttons -->
        <HBox spacing="8" alignment="CENTER">
            <Button text="Register" onAction="#handleRegister"
                   style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;"
                   prefWidth="112">
                <font>
                    <Font name="System Bold" size="9.6"/>
                </font>
            </Button>
            <Button text="Back to Login" onAction="#handleBack"
                   style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;"
                   prefWidth="112">
                <font>
                    <Font size="9.6"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</VBox>
