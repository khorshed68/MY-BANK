<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mybank.controllers.StaffRegistrationController"
      alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">
    
    <padding>
        <Insets top="15" right="35" bottom="15" left="35"/>
    </padding>
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="ðŸ¦" style="-fx-font-size: 32px;"/>
        <Label text="Staff Registration" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="22"/>
            </font>
        </Label>
        <Label text="Create your staff account" style="-fx-font-size: 12px; -fx-text-fill: #d0d0d0;"/>
    </VBox>
    
    <!-- Registration Form Card -->
    <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);"
          maxWidth="450" prefWidth="450">
        <padding>
            <Insets top="18" right="25" bottom="18" left="25"/>
        </padding>
            
            <!-- Full Name -->
            <VBox spacing="3">
                <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <TextField fx:id="fullNameField" promptText="Enter your full name"
                          style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Username -->
            <VBox spacing="3">
                <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <TextField fx:id="usernameField" promptText="Choose a username"
                          style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Email -->
            <VBox spacing="3">
                <Label text="Email *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <TextField fx:id="emailField" promptText="your.email@bank.com"
                          style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Phone Number -->
            <VBox spacing="3">
                <Label text="Phone Number *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <TextField fx:id="phoneField" promptText="01XXXXXXXXX"
                          style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Role Selection -->
            <VBox spacing="3">
                <Label text="Apply for Role *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <ComboBox fx:id="roleComboBox" promptText="Select role" prefWidth="Infinity"
                         style="-fx-padding: 5; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
                <Label text="Note: Admin accounts require approval" 
                       style="-fx-text-fill: #666; -fx-font-size: 10px; -fx-font-style: italic;"/>
            </VBox>
            
            <!-- Password -->
            <VBox spacing="3">
                <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <PasswordField fx:id="passwordField" promptText="Create a strong password"
                              style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Confirm Password -->
            <VBox spacing="3">
                <Label text="Confirm Password *" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"
                              style="-fx-padding: 8; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 12px;" prefHeight="28"/>
            </VBox>
            
            <!-- Profile Picture Section -->
            <VBox spacing="6">
                <Label text="Profile Picture (Optional)" style="-fx-font-weight: bold; -fx-text-fill: #444; -fx-font-size: 11px;"/>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <!-- Profile Picture Preview -->
                    <StackPane style="-fx-background-color: #f5f5f5; -fx-border-color: #667eea; -fx-border-width: 3; -fx-border-radius: 50; -fx-background-radius: 50; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.3), 10, 0, 0, 2);"
                              prefWidth="100" prefHeight="100" maxWidth="100" maxHeight="100">
                        <ImageView fx:id="profilePicturePreview" 
                                  fitWidth="94" fitHeight="94" 
                                  preserveRatio="false"
                                  smooth="true">
                            <clip>
                                <Circle centerX="47" centerY="47" radius="47"/>
                            </clip>
                        </ImageView>
                        <Label fx:id="noImageLabel" text="No Image" style="-fx-text-fill: #999; -fx-font-size: 10px;"/>
                    </StackPane>
                    
                    <!-- Upload Buttons -->
                    <VBox spacing="6">
                        <Button text="ðŸ“ Choose Picture" onAction="#chooseProfilePicture"
                               style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 16; -fx-background-radius: 12; -fx-cursor: hand; -fx-font-size: 10px;"
                               prefWidth="140" prefHeight="28"/>
                        <Button text="ðŸ—‘ï¸ Remove" fx:id="removePictureBtn" onAction="#removeProfilePicture"
                               style="-fx-background-color: #e0e0e0; -fx-text-fill: #666; -fx-padding: 6 16; -fx-background-radius: 12; -fx-cursor: hand; -fx-font-size: 10px;"
                               prefWidth="140" prefHeight="28" visible="false" managed="false"/>
                        <Label text="JPG, PNG (max 2MB)" style="-fx-text-fill: #888; -fx-font-size: 9px;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Error/Success Label -->
            <Label fx:id="messageLabel" style="-fx-font-weight: bold;" 
                   wrapText="true" visible="false" managed="false"/>
            
            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Register" onAction="#handleRegister"
                       style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 5; -fx-cursor: hand;"
                       prefWidth="130">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                </Button>
                <Button text="Back to Login" onAction="#handleBack"
                       style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 12 30; -fx-background-radius: 5; -fx-cursor: hand;"
                       prefWidth="130">
                    <font>
                        <Font size="11"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
</VBox>
